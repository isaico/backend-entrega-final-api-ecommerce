<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>products</title>
</head>
<body>
    <section>
        <h1>productos</h1>

        <ul>
                <% products.forEach(function(prod){ %>
                    <li>
                        <img src=<%= prod.foto %> alt="">
                        <h2>
                            <%= prod.nombre %>
                        </h2>
                        <p>
                            <%= prod.descripcion %>
                            <strong>
                                $ <%= prod.precio %>
                            </strong>
                        </p>    
                        <h3>
                            <%= prod.stock %>
                        </h3>
                    </li>
                <% }) %>
            </ul>
    </section>
</body>
</html>